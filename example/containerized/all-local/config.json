{
    "installers": {
        "pacman": {
            "package": "PPpackage_installer_pacman",
            "parameters": {
                "containerizer": {
                    "url": "unix:///run/podman/podman.sock",
                    "path_translations": [
                        {
                            "containerizer": "/tmp",
                            "container": "/mnt/workdir"
                        },
                        {
                            "containerizer": "$ROOT",
                            "container": "/mnt/root"
                        }
                    ]
                }
            }
        },
        "simple": {
            "package:": "PPpackage_installer_simple"
        }
    },
    "repositories": [
        {
            "driver": {
                "package": "PPpackage_pacman"
            },
            "database_path": "/mnt/repositories/database/archlinux-core",
            "cache_path": "/mnt/repositories/cache/archlinux-core",
            "parameters": {
                "header": "core",
                "include": "/etc/pacman.d/mirrorlist"
            }
        },
        {
            "driver": {
                "package": "PPpackage_pacman"
            },
            "database_path": "/mnt/repositories/database/archlinux-extra",
            "cache_path": "/mnt/repositories/cache/archlinux-extra",
            "parameters": {
                "header": "extra",
                "include": "/etc/pacman.d/mirrorlist"
            }
        },
        {
            "driver": {
                "package": "PPpackage_AUR"
            },
            "database_path": "/mnt/repositories/database/AUR",
            "cache_path": "/mnt/repositories/cache/AUR"
        },
        {
            "driver": {
                "package": "PPpackage_conan"
            },
            "database_path": "/mnt/repositories/database/conan-conancenter",
            "cache_path": "/mnt/repositories/cache/conan-conancenter",
            "parameters": {
                "url": "https://center.conan.io",
                "verify_ssl": true
            }
        },
        {
            "driver": {
                "package": "PPpackage_PP"
            },
            "database_path": "/mnt/repositories/database/PP",
            "cache_path": "/mnt/repositories/cache/PP"
        }
    ]
}
