{
    "repository_drivers": {
        "pacman": {
            "package": "PPpackage.repository_driver.pacman"
        },
        "AUR": {
            "package": "PPpackage.repository_driver.AUR"
        },
        "conan": {
            "package": "PPpackage.repository_driver.conan"
        }
    },
    "translators": {
        "pacman": {
            "package": "PPpackage.translator.pacman"
        },
        "conan": {
            "package": "PPpackage.translator.conan"
        }
    },
    "installers": {
        "pacman": {
            "package": "PPpackage.installer.pacman",
            "parameters": {
                "containerizer": {
                    "url": "unix:///run/podman/podman.sock",
                    "path_translations": [
                        {
                            "containerizer": "$ROOT",
                            "container": "/mnt/root"
                        }
                    ]
                }
            }
        }
    },
    "repositories": [
        {
            "driver": "pacman",
            "parameters": {
                "database_path": "/mnt/repositories/database/archlinux-core",
                "repository": "core",
                "mirrorlist": [
                    "https://geo.mirror.pkgbuild.com/core/os/x86_64"
                ]
            }
        },
        {
            "driver": "pacman",
            "parameters": {
                "database_path": "/mnt/repositories/database/archlinux-extra",
                "repository": "extra",
                "mirrorlist": [
                    "https://geo.mirror.pkgbuild.com/extra/os/x86_64"
                ]
            }
        },
        {
            "driver": "AUR"
        },
        {
            "driver": "conan",
            "parameters": {
                "cache_path": "/mnt/repositories/cache/conancenter",
                "url": "https://center.conan.io",
                "verify_ssl": true
            }
        }
    ]
}
